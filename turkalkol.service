[Unit]
Description=TurkAlkol Flask App
After=network.target

[Service]
User=root
WorkingDirectory=/root/turkalkol
Environment="PATH=/root/turkalkol/venv/bin"
ExecStart=/root/turkalkol/venv/bin/gunicorn --bind 0.0.0.0:5000 --workers 2 app:app
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
